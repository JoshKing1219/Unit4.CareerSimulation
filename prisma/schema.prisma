generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id         String     @id @default(uuid())
  username   String     @unique
  password   String
  email      String?
  first_name String?
  last_name  String?
  reviews    reviews[]
  comments   comments[]
}

model theory {
  id          String    @id @default(uuid())
  title       String    @unique
  description String
  image_url   String
  type        Type      @default(Politics)
  reviews     reviews[]
}

enum Type {
  Politics
  Science
  Weather
  Aliens
  Space
  Society
  Medicine
  Religion
  CoverUps
}

model reviews {
  id          String     @id @default(uuid())
  score       Int
  user_review String
  user_id     String
  user        users      @relation(fields: [user_id], references: [id])
  theory_id   String
  theory      theory     @relation(fields: [theory_id], references: [id])
  comments    comments[]
}

model comments {
  id        String  @id @default(uuid())
  comment   String
  author_id String
  author    users   @relation(fields: [author_id], references: [id])
  review_id String
  review    reviews @relation(fields: [review_id], references: [id])
}
